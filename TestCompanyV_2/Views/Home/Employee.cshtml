            <button type="button" class="btn btn-primary" id="btn-buscar">Buscar</button>
        </div>
    </div>
    <div class="row">
        <table class="table align-middle mb-0 bg-white" id="tbl-employee">
            <thead class="bg-light">
                <tr>
                    <th data-name="employee_name">Name</th>
                    <th data-name="employee_salary">Salary</th>
                    <th data-name="employee_age">Age</th>
                    <th data-name="employee_salary_per_year">Salary per Year</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    </div>
</div>

