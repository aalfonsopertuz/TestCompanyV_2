@{
    ViewData["Title"] = "Employee";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <div class="form-outline">
                    <label class="form-label" for="form1">Identificación</label>
                    <input id="txt-identificacion" class="form-control" />
                </div>
            </div>
        </div>
